<main class="container">
    <section class="form__contacto">
        <form action="" method="post">
            <h1 class="admin__title oneline title__contacto">CONTACTO</h1>

            <div class="contacto__nombre">
                <label class="label__input"  for="nombre">Nombre :</label>  
                <input class="input__item input__contacto" type="text" placeholder="Nombre" required>
            </div>

            <div class="contacto__apellido">
                <label class="label__input" for="apellido">Apellido :</label>  
                <input class="input__item input__contacto" type="text" placeholder="Apellido" required>
            </div>

            <div class="contacto__email ">
                <label class="label__input label__email" for="email">E-mail :</label>  
                <input class="input__item input__contacto" type="email" placeholder="Email" required>
            </div>

            <div class="comentario">
                <textarea class="textarea__comentario"  name="textarea" id="" cols="30" rows="10" 
                    placeholder="Comentario"></textarea>
            </div>
            <div class="contacto__btn">
                <button class="btn" id="btn"  type="submit">ENVIAR</button>
            </div>
        </form>
        
    </section>
</main>