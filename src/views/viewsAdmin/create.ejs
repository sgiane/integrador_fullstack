<main class="container">
    <section class="form__create">

        <form action="/admin/create" method="post"  enctype="multipart/form-data">
            <h1 class="admin__title oneline">CREAR NUEVO ITEM</h1>

            <div class="select__categoria">
                <label class="label__select" for="categoria">Categoría:</label>
                <select class="select__item" name="category_id" id="categoria" required>
                    <option selected disabled hidden>Seleccionar</option>
                    <% categories.forEach(category=> {%>
                        <option value="<%= category.id %>">
                            <%= category.category_name %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="select__licencia">
                <label class="label__select" for="licencia">Licencia:</label>
                <select class="select__item" name="license_id" id="licencia" required>
                    <option selected disabled hidden>Seleccionar</option>
                    <% licenses.forEach(license=> {%>
                        <option value="<%= license.id %>">
                            <%= license.license_name %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="nom__producto oneline">
                <label class="label__input" for="nombre">Nombre del Producto:</label>
                <input class="input__item " type="text" id="nombre" name="product_name" placeholder="Kakashi Hatake Shippuden Saga" required>
            </div>
            <div class="descripcion oneline">
                <textarea class="textarea__descripcion" name="product_description" id="descripcion" cols="30" rows="10"
                    placeholder="Descripción del producto"></textarea>
            </div>

            <div class="sku__item">
                <label class="label__input" for="sku">SKU:</label>
                <input class="input__item input__sku" type="text" name="sku" id="sku"  placeholder="SSK111AB001" required>
            </div>
            <div class="precio__item">
                <label class="label__input " for="precio">Precio:</label>
                <input class="input__item input__precio" type="text" name="price" id="precio"  placeholder="$0.000,00" required>
            </div>
            <div class="stock__item">
                <label class="label__input input__stock" for="stock">Stock:</label>
                <input class="input__item" type="text" name="stock" id="stock"  placeholder="0">
            </div>
            <div class="descuento__item">
                <label class="label__input" for="descuento">Descuento:</label>
                <input class="input__item" type="text" name="discount" id="descuento"  placeholder="0%">
            </div>
            <div class="cuota__item">
                <label class="label__input" for="cuotas">Cuotas:</label>
                <select class="select__item__cuota" name="dues" id="cuotas">
                    <option class="select__option" value="">3</option>
                    <option class="select__option" value="">6</option>
                    <option class="select__option" value="">12</option>
                </select>
            </div>
            <div class="img__item oneline">
                <label class="label__input" for="imagenes">Imágenes:</label>
                <input class="input__item__file" type="file" name="imagen">  
            </div> 
            <div class="btn__create oneline">
                <button class="btn" type="submit">Agregar Producto</button>
                <button class="btn btn-clear" type="submit">Limpiar</button>
            </div>               
        </form>
    </section>
</main>